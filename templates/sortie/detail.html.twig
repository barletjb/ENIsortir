{% extends 'base.html.twig' %}

{% block title %}Détail Sortie{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1 class="mb-4">{{ sortie.nom }}</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h3>Site : {{ sortie.site.nom }}</h3>
            <p><strong>État :</strong> {{ sortie.etat.libelle }}</p>
            {% if sortie.etat.libelle == 'Annulée' %}
                <p><strong>Raison :</strong> {{ sortie.raisonAnnulation }}</p>
            {% endif %}

            <p><strong>Date et heure :</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</p>
            <p><strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription|date('d/m/Y  H:i') }}</p>
            <p><strong>Nombre de places :</strong> {{ sortie.nbInscriptionsMax }}</p>
            <p><strong>Durée :</strong> {{ sortie.duree }} minutes</p>
            <p><strong>Description :</strong> {{ sortie.infosSortie }}</p>
        </div>
    </div>

            <div class="card mb-3">
                <div class="card-body">
                    <p><strong>Ville :</strong> {{ sortie.lieu.ville.nom }}</p>
                    <p><strong>Lieu : </strong>{{ sortie.lieu.nom}} </p>
                    <p><strong>Rue :</strong> {{ sortie.lieu.rue }}</p>
                    <p><strong>Code postal :</strong> {{ sortie.lieu.ville.codePostal }}</p>
                    <p><strong>Latitude :</strong> {{ sortie.lieu.latitude }}</p>
                    <p><strong>Longitude :</strong> {{ sortie.lieu.longitude }}</p>
                </div>
            </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Participants inscrits</h5>
                <ul class="list-group" >
                    {% for user in sortie.users %}
                        <li class="list-group-item bg-dark">
                            <a class="lien_profil" href="{{ path('user_profil', {id: user.id}) }}">
                                {{ user.pseudo }} - {{ user.nom }}
                            </a>
                        </li>
                    {% else %}
                        <li class="list-group-item bg-dark text-white">Aucun participant inscrit</li>
                    {% endfor %}
                </ul>

                {% if sortie.etat.libelle not in ["Clôturée", "Annulée", "En création"] %}
                    {% if sortie.organisateur != app.user %}
                        {% if sortie.dateLimiteInscription > "now"|date %}
                            {% if not sortie.users.contains(app.user) %}
                                <form method="post" action="{{ path('sortie_inscription', {id: sortie.id}) }}" class="mt-3">
                                    <button type="submit" class="btn btn-success">Je participe</button>
                                </form>
                            {% else %}
                                <p class="text-success mt-3">Vous êtes déjà inscrit(e) à cette sortie.</p>
                            {% endif %}
                        {% else %}
                            <button class="btn btn-secondary mt-3" disabled>Inscriptions closes</button>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
